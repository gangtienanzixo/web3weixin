@model Seebon.Weixin.MP.Service.CommonService.Model.Administrator
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理员登陆</title>
     @Scripts.Render("~/bundles/AdminJs")
     @Styles.Render("~/Content/Admin/AdminCss")
    <script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
@using (Html.BeginForm()){
  
<div id="login_body">
	<div id="login_div">
		<div id="login_form_div">
				<table border=0 width=300>
				<tbody>
				<tr>
					<td width="170">
                     用户名
                      @Html.TextBoxFor(model => model.UserName, new { @class = "login_input" })
                      
                        <BR>

                      密码
                      @Html.PasswordFor(model => model.UserPwd, new { @class = "login_input" })
                     
                    </td>
                    <td align="left">
                       <input  type="submit" value="登入" class="login_btn" />

                    </td>
                </tr>
				<tr>
				  <td colspan="2" class="tipbox" style="background:url(Images/hint.gif) 0 6px no-repeat; padding-left:15px;">提示：
                   @Html.ValidationSummary(true)
                    </td>
				  </tr>
				</tbody>
                </table>
		</div>
	</div>
	<div id="login_footer">广州仕邦人力资源有限公司 © 2013 www.seebon.com Inc.</div>
</div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</body>
</html>
