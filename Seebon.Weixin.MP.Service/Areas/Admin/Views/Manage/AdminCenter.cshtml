@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>管理中心首页</title>
     @Scripts.Render("~/bundles/AdminJs")
     @Styles.Render("~/Content/Admin/AdminCss")
</head>
<body style="padding:10px;">
@using (Html.BeginForm())
{
    <div class="navigation"><span class="add"></span><b>您当前的位置：首页 &gt; 管理中心 &gt; 管理中心首页</b></div>
    <div class="spClear"></div>
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="msgtable">
      <tr>
        <th colspan="2" align="left">服务器信息</th>
      </tr>
      <tr>
        <td width="25%" align="right">服务器名称：</td>
        <td width="75%">
        @Server.MachineName
        </td>
      </tr>
      <tr>
        <td align="right">服务器IP：</td>
        <td>
         @Request.ServerVariables["LOCAL_ADDR"]
        </td>
      </tr>
      <tr>
        <td align="right">NET框架版本：</td>
        <td>
        @Environment.Version.ToString()
         
        </td>
      </tr>
      <tr>
        <td align="right">操作系统：</td>
        <td>
         @Environment.OSVersion.ToString()
        </td>
      </tr>
      <tr>
        <td align="right">IIS环境：</td>
        <td>
         @Request.ServerVariables["SERVER_SOFTWARE"]
        </td>
      </tr>
      <tr>
        <td align="right">服务器端口：</td>
        <td>
          @Request.ServerVariables["SERVER_PORT"]
        </td>
      </tr>
      <tr>
        <td align="right">虚拟目录绝对路径：</td>
        <td>
          @Request.ServerVariables["APPL_PHYSICAL_PATH"]
        </td>
      </tr>
      <tr>
        <td align="right">HTTPS支持：</td>
        <td>
          @Request.ServerVariables["HTTPS"]
        </td>
      </tr>
      <tr>
        <td align="right">seesion总数：</td>
        <td>
         @Session.Keys.Count.ToString()
        </td>
      </tr>
    </table>
}
</body>
</html>

